<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.AddActivity"
    android:orientation="vertical"
    android:background="@drawable/music"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:padding="25dp"
            android:background="@color/purple"
            android:alpha="@android:integer/config_shortAnimTime">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Daftar Playlist Lagu"
                android:textColor="@color/purple2"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Judul Lagu :"
                android:textColor="@color/purple2"
                android:textSize="20sp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/et_judul"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="Judul Lagu"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nama Penyanyi :"
                android:textColor="@color/purple2"
                android:textSize="20sp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/et_penyanyi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="Nama Penyanyi"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_gravity="center"
                android:id="@+id/bt_tambah"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/tambah"
                android:text="Tambah"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>