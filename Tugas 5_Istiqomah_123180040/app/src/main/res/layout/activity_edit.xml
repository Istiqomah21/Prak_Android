<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".content.EditActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Music"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/purple2"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judul_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Lagu"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bla"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_penyanyi_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Penyanyi"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_penyanyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blabla"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"        >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_edit"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/tambah"
                    android:text="Edit"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:layout_marginTop="25dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_hapus"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/tambah"
                    android:text="Hapus"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_marginTop="25dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>